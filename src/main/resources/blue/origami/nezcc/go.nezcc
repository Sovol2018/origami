    fp, err := os.Open(name)
    if err != nil {
        panic(err)
    }
    defer fp.Close()

    scanner := bufio.NewScanner(fp)
    for scanner.Scan() {
        append(buf, []rune(scanner.Text()))
    }
    return &buf
}


func main(){
    for i,v := range os.Args {
        if i == 0 {
